brooklyn.catalog:
  version: "0.5.0-SNAPSHOT" # HYPERLEDGER_BROOKLYN_SAWTOOTH_VERSION
  itemType: entity
  brooklyn.libraries:
    - url: "mvn:io.brooklyn.hyperledger/sawtooth/0.5.0-SNAPSHOT" # HYPERLEDGER_BROOKLYN_SAWTOOTH_VERSION
      name: io.brooklyn.hyperledger.sawtooth
      version: 0.5.0-SNAPSHOT # HYPERLEDGER_BROOKLYN_SAWTOOTH_VERSION

  items:
    - "classpath://io.brooklyn.hyperledger.sawtooth:tests/sawtooth/sawtooth-core.tests.bom"
    - "classpath://io.brooklyn.hyperledger.sawtooth:tests/sawtooth/sawtooth-extras.tests.bom"
    - "https://raw.githubusercontent.com/brooklyncentral/common-catalog-utils/master/common-tests/src/main/resources/commontests/common.tests.bom"

    - id: hyperledger-sawtooth-tests
      type: entity
      item:
        name: "hyperledger-sawtooth-network"
        description: |
          Hyperledger Sawtooth blockchain network in a single Amazon region.

        services:
          - type: sawtooth-platform-application
            id: hyperledger-sawtooth-platform
            name: "hyperledger-sawtooth-platform"

            brooklyn.config:
              sawtooth.version: "1.0.5"
              sawtooth.repository: "blockchaintp"
              sawtooth.size: 0
              sawtooth.network: "blockchaintp.local"
              sawtooth.network.cidr: "10.10.10.0/24"
              sawtooth.network.gw: "10.10.10.1"
              sawtooth.cluster.name: "sawtooth"

          - type: test-case
            name: "Test Assertions"

            brooklyn.config:
              targetResolutionTimeout: 10s
              timeout: 30m
              targetId: hyperledger-sawtooth-platform
              serverNodeId: sawtooth-server-node

            brooklyn.children:
              - type: sawtooth-tests
                name: "Hyperleger Sawtooth Tests"

    - id: sawtooth-singlenode-platform-tests
      type: entity
      item:
        name: "sawtooth-platform-network"
        description: |
          The Sawtooth Platform consisting of a Sawtooth network and supporting components.

        services:
          - type: sawtooth-platform-application
            id: sawtooth-platform-cluster
            name: "sawtooth-platform-cluster"

            brooklyn.config:
              sawtooth.version: "1.0.5"
              sawtooth.repository: "blockchaintp"
              sawtooth.size: 0
              sawtooth.network: "blockchaintp.local"
              sawtooth.network.cidr: "10.0.0.0/22"
              sawtooth.network.gw: "10.0.0.1"
              sawtooth.cluster.name: "sawtooth"

          - type: test-case
            name: "Test Assertions"

            brooklyn.config:
              targetResolutionTimeout: 10s
              timeout: 45m
              targetId: sawtooth-platform-cluster
              serverNodeId: sawtooth-platform-server-node

            brooklyn.children:
              - type: sawtooth-platform-tests
                name: "Sawtooth Platform Tests"
